<Input @value={{this.query}} class="light" />

<table>
    <tr>
        <th></th>
        <th></th>
        <th>Title</th>
        <th>Author</th>
        <th>Status</th>
    </tr>
    {{#each @books as |book|}}
    <tr>
        <td>
            <LinkTo @route="edit" @model={{book.id}}>
                <FaIcon @icon="pen-to-square" @size="2x"/>
            </LinkTo>
        </td>
        <td>
            <div class="delete" onclick={{action "deleteBook" book}}>
                <FaIcon @icon="trash-can" @size="2x"/>
            </div>
        </td>
        <td>
            <LinkTo @route="book" @model={{book.id}}>{{book.title}}</LinkTo>
        </td>
        <td>{{if book.author.name book.author.name 'unlisted'}}</td>
        <td style="padding: 0px 35px 0px 35px;">{{book.status}}</td>
    </tr>
    {{/each}}
</table>