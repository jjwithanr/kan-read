<form onsubmit={{action "createBook"}}>
    <div>
        <label for="title">Title</label>
        {{input type="text" id="title" value=title}}
    </div>
    
    <div>
        <label for="author">Author</label>
        {{input type="text" id="author" value=author}}
    </div>
    
    <button type="submit">Create</button>
</form>