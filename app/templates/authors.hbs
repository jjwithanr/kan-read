<div class="list-models">

    <div class="create">
        <h1>Authors</h1>
        <LinkTo @route="newAuthor" class="icon">
            <FaIcon @icon="square-plus" class="icon" @size="2x"/>
        </LinkTo>
    </div>

    <table>
        <tr>
            <th></th>
            <th></th>
            <th>Name</th>
            <th>Books</th>
        </tr>
        {{#each model as |author|}}
        <tr>
            <td>
                <LinkTo @route="editAuthor" @model={{author.id}}>
                    <FaIcon @icon="pen-to-square" @size="2x"/>
                </LinkTo>
            </td>
            <td>
                <div class="delete" onclick={{action "deleteAuthor" author}}>
                    <FaIcon @icon="trash-can" @size="2x" />
                </div>
            </td>
            <td>
                {{author.name}}
            </td>
            <td>
                {{#each author.books as |book|}}
                    {{book.title}},
                {{/each}}
            </td>
        </tr>
            {{/each}}
    </table>

</div>